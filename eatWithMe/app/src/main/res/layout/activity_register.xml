<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <EditText
        android:id="@+id/reg_display_name"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView30"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:hint="Name"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />


    <EditText
        android:id="@+id/login_email2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_display_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-95dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <EditText
        android:id="@+id/login_password2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_email2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-104dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <Button
        android:id="@+id/reg_create_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_password2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="-306dp"
        android:backgroundTint="#CA0313"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Sign up "
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</RelativeLayout>